{% extends 'template.html.twig' %}
{% block title %}Liste des tickets{% endblock %}
{% block body %}
    <br>
    <h1>Liste des tickets</h1>
    <button class="btn btn-success" TYPE="button" style="color: darkolivegreen; margin-left: 80%">
        <a href="{{ path('ajouter_ticket')}}" class="nav-link" style="color: white"><i class="fa fa-plus-square"></i> Ajouter ticket</a>
    </button>
    <hr>
<div class="row">
{% for ticket in tickets %}
    <div class="card col-3 m-2">
<div class="card-body">
        <h5 class="card-title">{{ ticket.id }}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{ ticket.titre }}</h6>
        <p class="card-text">{{ ticket.nom }}</p>
        <p class="card-text">{{ ticket.discription }}</p>
        <p class="card-text">{{ ticket.statut }}</p>
    <p class="card-text">{{ ticket.dateCr }}</p>

        <a href="/ticket/modifier/{{ ticket.id }}" class="card-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
            </svg>
        </a>
        <a href="/ticket/supprimer/{{ ticket.id }}" class="card-link"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
            </svg></a>
        <a href="/ticket/details/{{ ticket.id }}" class="card-link"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
            </svg></a>


    </div>

</div>
    {% endfor %}
</div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {% if page > 1 %}
                <li class="page-item"><a class="page-link" href="{{path('ticket.list', {numPage: page - 1, limit: limit})}}">Previous</a></li>
            {% endif %}
            {% for i in 1..nbrePage %}
                <li class="page-item"><a class="page-link" href="{{path('ticket.list', {numPage: i, limit: limit})}}">{{ i }}</a></li>
            {% endfor %}
            {% if page < nbrePage %}
                <li class="page-item"><a class="page-link" href="{{path('ticket.list', {numPage: page + 1, limit: limit})}}">Next</a></li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}